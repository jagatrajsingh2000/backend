datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String       @unique
  userName    String       @unique
  password    String
  collections Collection[]
  posts       Post[]       @relation("UserSavedPosts")
  likes       Like[]
  following   Following[]  @relation("UserFollowing")
  followers   Following[]  @relation("UserFollowers")
}

model Following {
  id          Int  @id @default(autoincrement())
  follower    User @relation("UserFollowing", fields: [followerId], references: [id])
  followerId  Int
  following   User @relation("UserFollowers", fields: [followingId], references: [id])
  followingId Int

  @@unique([followerId, followingId])
}

model Collection {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  timeStamp DateTime @default(now())
  posts     Post[]   @relation("CollectionPosts")
}

model Post {
  id          Int          @id @default(autoincrement())
  user        User         @relation("UserSavedPosts", fields: [userId], references: [id])
  userId      Int
  body        String
  timeStamp   DateTime     @default(now())
  likes       Like[]       @relation("PostLikes")
  collections Collection[] @relation("CollectionPosts")
}

model Like {
  id     Int  @id @default(autoincrement())
  post   Post @relation("PostLikes", fields: [postId], references: [id])
  postId Int
  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([postId, userId])
}
